<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thoughts.apps.clipper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightTheme" >
        <activity
            android:name="com.thoughts.apps.clipper.NoUiActivity"
            android:theme="@style/NoUiTheme"
            android:label="@string/add_to_clipboard" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/*" />
                <data android:mimeType="message/*" />
                <data android:mimeType="multipart/*" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.thoughts.apps.clipper.Home"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.thoughts.apps.clipper.Settings"
                android:theme="@style/DarkTheme"
                android:label="@string/title_activity_settings"
                android:parentActivityName="com.thoughts.apps.clipper.Home" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.thoughts.apps.clipper.Home" />
        </activity>
    </application>

</manifest>
