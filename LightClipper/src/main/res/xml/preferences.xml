<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- General Settings -->
    <PreferenceCategory
        android:key="pref_key_general_settings"
        android:title="@string/pref_title_general" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_current_theme"
            android:title="@string/pref_title_current_theme" />

        <Preference
            android:key="pref_key_clear_clips"
            android:title="@string/pref_title_clear_clips" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/pref_title_about" >
        <PreferenceScreen android:title="@string/pref_header_about" >
            <PreferenceCategory android:title="@string/pref_title_about" >
                <Preference
                    android:title="@string/about_author"                     
                    />
                <Preference
                    android:title="@string/about_version"
                    android:key="pref_key_build_version"
                    android:summary="@string/about_version_summary" 
                    />
                <Preference
                    android:title="@string/about_source"
                    android:summary="@string/about_source_summary" 
                    android:key="pref_key_show_source"                    
                    />
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>